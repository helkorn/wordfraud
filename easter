<body>
    <div class="container">
        <div id="specialWord" class="special-word"></div>
        <a id="specialLink" class="link"></a>
    </div>
    <div class="full-screen-image" id="rabbitImage" style="display: none;">
        <img src="therabbit.png" alt="Jänis">
    </div>
    <script>
        function getQueryParam(param) {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get(param);
        }

        document.addEventListener("DOMContentLoaded", () => {
            const word = getQueryParam('word').toUpperCase();
            const specialWord = document.getElementById('specialWord');
            const specialLink = document.getElementById('specialLink');
            const rabbitImage = document.getElementById('rabbitImage');

            specialWord.textContent = `Kysyit: ${word}`;

            if (word === 'JÄNIS') {
                specialLink.textContent = 'Hei mikä toi on?';
                specialLink.href = 'https://youtu.be/0wHXcv4Q4Sk';
                setTimeout(() => {
                    rabbitImage.style.display = 'flex';
                    setTimeout(() => {
                        rabbitImage.style.display = 'none';
                    }, 1500);
                }, 500);
            } else if (word === 'TIMPE') {
                specialLink.textContent = 'Tarkista tämä linkki';
                specialLink.href = 'https://youtu.be/special-timpe-link';
            } else {
                specialLink.textContent = 'Olet löytänyt salaisen sivun!';
                specialLink.href = '#';
            }
        });
    </script>
</body>
</html>
